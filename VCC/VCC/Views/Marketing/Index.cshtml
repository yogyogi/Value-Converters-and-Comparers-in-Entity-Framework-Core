@{
    ViewData["Title"] = "All Marketing";
}
@model IEnumerable<Marketing>

<h1 class="bg-info text-white">All Marketing</h1>
<a asp-action="Create" class="btn btn-secondary">Create</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Type</th>
        <th>Comment</th>
    </tr>
    @foreach (Marketing m in Model)
    {
        <tr>
            <td>@m.Id</td>
            <td>@m.Type</td>
            <td>@m.Comment</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@m.Id">
                    Update
                </a>
            </td>
        </tr>
    }
</table>