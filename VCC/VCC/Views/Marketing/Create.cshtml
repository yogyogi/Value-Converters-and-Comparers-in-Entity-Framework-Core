@{
    ViewData["Title"] = "Create Marketing";
}

@model Marketing

<h1 class="bg-info text-white">Create Marketing</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>

<form method="post">
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control" asp-items="@new SelectList(Enum.GetNames(typeof(MarketingType)))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <input asp-for="Comment" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>