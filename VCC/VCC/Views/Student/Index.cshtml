@{
    ViewData["Title"] = "All Student";
}
@model IEnumerable<Student>

<h1 class="bg-info text-white">All Student</h1>
<a asp-action="Create" class="btn btn-secondary">Create</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>PassStatus</th>
    </tr>
    @foreach (Student s in Model)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.PassStatus</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@s.Id">
                    Update
                </a>
            </td>
        </tr>
    }
</table>