@{
    ViewData["Title"] = "All Products";
}
@model IEnumerable<Product>

<h1 class="bg-info text-white">All Products</h1>
<a asp-action="Create" class="btn btn-secondary">Create</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Update</th>
        <th>Tags</th>
    </tr>
    @foreach (Product p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>
                @if (p.Tags != null)
                {
                    foreach (string tag in p.Tags)
                    {
                        @($"{tag} {", "}")
                    }
                }
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@p.Id">
                    Update
                </a>
            </td>
        </tr>
    }
</table>