@{
    ViewData["Title"] = "All Order";
}
@model IEnumerable<Order>

<h1 class="bg-info text-white">All Order</h1>
<a asp-action="Create" class="btn btn-secondary">Create</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Amount</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (Order o in Model)
    {
        <tr>
            <td>@o.Id</td>
            <td>@o.Price.Amount</td>
            <td>@o.Price.Currency</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@o.Id">
                    Update
                </a>
            </td>
        </tr>
    }
</table>